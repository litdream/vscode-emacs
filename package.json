{
  "name": "vscode-emacs",
  "displayName": "Emacs Keybindings",
  "description": "Emacs features and keybindings for VSCode",
  "version": "0.0.1",
  "publisher": "litdream",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Keymaps"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emacs.dabbrevExpand",
        "title": "Emacs: Dynamic Abbreviation Expand (dabbrev-expand)"
      },
      {
        "command": "emacs.selectLine",
        "title": "Emacs: Select Current Line"
      },
      {
        "command": "emacs.centerCursor",
        "title": "Emacs: Center Cursor in View (recenter)"
      },
      {
        "command": "emacs.centerCursorOther",
        "title": "Emacs: Center Cursor in Other Window"
      }
    ],
    "keybindings": [
      {
        "command": "emacs.dabbrevExpand",
        "key": "ctrl+shift+r alt+/",
        "when": "editorTextFocus"
      },
      {
        "command": "emacs.selectLine",
        "key": "ctrl+shift+r ctrl+space",
        "when": "editorTextFocus"
      },
      {
        "command": "emacs.centerCursor",
        "key": "ctrl+shift+r ctrl+l",
        "when": "editorTextFocus"
      },
      {
        "command": "emacs.centerCursorOther",
        "key": "ctrl+shift+r ctrl+shift+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.0",
    "typescript": "^5.2.0"
  }
}
